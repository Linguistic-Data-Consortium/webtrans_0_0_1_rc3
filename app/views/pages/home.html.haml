-content_for :head do
  = javascript_include_tag 'pages'
  = javascript_include_tag "nodes"
  -# = javascript_include_tag 'collections/collection'
= #$ua.to_s
- if @init
  .max-w-2xl.mx-auto
    = render :partial => "servers/new"
- elsif @mode == 'collection'
  = render 'collection_description'
  = render 'account_creation_signin'
- else
  #main2
    .w-96.mx-auto
      = form_for(:session, :url => login_path) do |f|
        .mx-auto.mb-4
          .block.mb-2
            %label User Name
          .block.mb-2
            = f.text_field :name, class: 'border rounded w-full'
        .mx-auto.mb-4
          .block.mb-2
            %label Password
          .block.mb-2
            = f.password_field :password, class: 'border rounded w-full'
        = f.submit 'Sign in', class: "w-full justify-center rounded-md border border-transparent shadow-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"


    .w-96.mx-auto.pt-4
      %h4 New Account Creation
      = link_to "Create account", new_user_path, :class => "w-full justify-center rounded-md border border-transparent shadow-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"

    .w-96.mx-auto.pt-4
      =link_to "Username/password recovery", new_password_reset_path, :class => "w-full justify-center rounded-md border border-transparent shadow-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"

    - if Server.count > 0 and Server.first.name == 'single'
      %h4 Single User Installation
      %p
        This is a Single User Installation, log in here.
      = button_to "Login", "/users/single", :class => "w-full justify-center rounded-md border border-transparent shadow-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"

-content_for :action_specific_js do
  ldc_pages.init_home();
  ldc_collection.init_home();
