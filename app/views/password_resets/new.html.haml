- provide(:title, "Forgot password")

.w-96.mx-auto
  .text-xl.pb-4
    Recover password
  = form_for(:password_reset, url: password_resets_path) do |f|
    .div
      = f.label :email
    .div.pb-4
      = f.email_field :email, class: 'border rounded w-full'
    .div
      = f.submit "Submit", class: "w-full justify-center rounded-md border border-transparent shadow-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
