- provide :title, 'Log in'

.w-96.mx-auto
  %h1.text-center
    Log in
  %div
    = form_for(:session, url: login_path) do |f|
      .mx-auto.mb-4
        = f.label :name, class: 'block mb-2'
        = f.text_field :name, class: 'border rounded w-full'
      .mx-auto.mb-4
        = f.label :password, class: 'block mb-2'
        = f.password_field :password, class: 'border rounded w-full'

        - if false
          = f.label :remember_me, class: 'checkbox inline'
          = f.check_box :remember_me
          %span
            Remember me on this computer
      %div
        = f.submit 'Sign in', class: "justify-center rounded-md border border-transparent shadow-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
      %div
        = link_to '(forgot password)', new_password_reset_path

    %p
      New user?
      = link_to 'Sign up here', signup_path
